<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="14dp"
    android:layout_marginLeft="10dp"
    tools:context=".ui.info.VideoInfoActivity"
    android:orientation="vertical">

   <FrameLayout
       android:id="@+id/player"
       android:layout_width="match_parent"
       android:layout_height="260dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_margin="5dp"
        android:layout_marginRight="5dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/videoName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:autoSizeMaxTextSize="20dp"
            android:autoSizeMinTextSize="13dp"
            android:autoSizeTextType="uniform"
            android:text="星汉灿烂、预审沧海第一集第一季"

            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/introductionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="简介 >" />

        <LinearLayout
            android:id="@+id/yearLine"
            android:layout_marginTop="10dp"
            android:layout_below="@id/videoName"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="7.1分"
                android:textColor="@color/royalblue" />

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:text="中国大陆"/>

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:text="2022"/>


            <TextView
                android:id="@+id/vod_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:text="剧情，国产"/>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/remark123"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:text="选集"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/selectRemark"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="12dp"
            android:text="24集 >" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectNumberRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"/>

</LinearLayout>